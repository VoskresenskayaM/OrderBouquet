@model IEnumerable<Bouquet>
@{
    ViewData["Title"] = "Home Page";
}

<table class="table">

    <thead>
        <tr>
            <th scope="col">Название букета</th>
            <th scope="col">Цена</th>
            <th scope="col"></th>
        </tr>
    </thead>

    @foreach (Bouquet b in Model)
    {
        <tr>

            <td>
                <a asp-controller="Home" asp-action="Details" asp-route-id="@b.Id">@b.Name</a>
            </td>
            <td>
                @b.Price
            </td>
            <td>
                <a asp-controller="Order" asp-action="Create" asp-route-id="@b.Id" >Заказать</a>

            </td>
        </tr>
    }
</table>
